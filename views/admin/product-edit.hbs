<section class="content-main">
  <form action="/admin/products/edit/{{product._id}}" method="POST">


    <div class="row">
      <!-- Header -->
      <div class="col-9">
        <div class="content-header">
          <h2 class="content-title">Edit Product</h2>
          <button type="submit" class="btn btn-md rounded font-sm hover-up">
            Save
          </button>
        </div>
      </div>
  
      <!-- Main Form -->
      <div class="col-lg-6">
        <div class="card mb-4">
          <div class="card-header">
            <h4>Basic</h4>
          </div>

          <div class="card-body">

            <!-- Product Name -->
            <div class="mb-4">
              <label class="form-label">Product Name</label>
              <input
                type="text"
                name="productName"
                class="form-control"
                value="{{product.productName}}"
                required
              />
            </div>

            <!-- Brand & Category -->
            <div class="row">
              <div class="col-lg-4">
                <div class="mb-4">
                  <label for="brand" class="form-label">Brand</label>
                  <select name="brand" id="brand" class="form-control">
                    <option value="">Select brand</option>
                    <option value="Plum">Plum</option>
                    <option value="Mamaearth"> Mamaearth</option>
                    <option value="Aqualogica">Aqualogica</option>
                    <option value="Dot & Key">Dot & Key</option>
                    <option value="Simple">Simple</option>
                    <option value="Neutrogena">Neutrogena</option>
                    <option value="CeraVe">CeraVe</option>
                    <option value="The Ordinary">The Ordinary</option>
                    <option value="Minimalist">Minimalist</option>
                    <option value="Dr. Sheth's">Dr. Sheth's</option>
                  </select>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="mb-4">
                  <label for="category" class="form-label">Category</label>
                  <select name="category" id="category" class="form-control">
                    <option value="">Select category</option>
                    <option value="men" {{#ifEquals product.category "men"}}selected{{/ifEquals}}>Men</option>
                    <option value="women" {{#ifEquals product.category "women"}}selected{{/ifEquals}}>Women</option>
                    <option value="Unisex" {{#ifEquals product.category "Unisex"}}selected{{/ifEquals}}>Unisex</option>
                  </select>
                </div>
              </div>
              

            <!-- Descriptions -->
            <div class="mb-4">
              <label class="form-label">Short Description</label>
              <textarea
                name="shortDescription"
                class="form-control"
                rows="3"
              >{{product.shortDescription}}</textarea>
            </div>

            <div class="mb-4">
              <label class="form-label">Full Description</label>
              <textarea
                name="fullDescription"
                class="form-control"
                rows="5"
              >{{product.fullDescription}}</textarea>
            </div>

            <!-- Pricing -->
            <div class="row gx-2">
              <div class="col-lg-6 mb-3">
                <label class="form-label">Price</label>
                <input
                  type="number"
                  name="regularPrice"
                  class="form-control"
                  step="0.01"
                  value="{{product.price}}"
                  required
                />
              </div>

              <div class="col-lg-6 mb-3">
                <label class="form-label">Discount Price</label>
                <input
                  type="number"
                  name="discountPrice"
                  class="form-control"
                  step="0.01"
                  value="{{product.discountPrice}}"
                />
              </div>
            </div>

            <!-- Stock & Rating -->
            <div class="row gx-2">
              <div class="col-lg-6 mb-3">
                <label class="form-label">Stock</label>
                <input
                  type="number"
                  name="stock"
                  class="form-control"
                  value="{{product.stock}}"
                  required
                />
              </div>

              <div class="col-lg-6 mb-3">
                <label class="form-label">Rating</label>
                <input
                  type="number"
                  name="rating"
                  class="form-control"
                  step="0.1"
                  max="5"
                  value="{{product.rating}}"
                />
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </form>
</section>
