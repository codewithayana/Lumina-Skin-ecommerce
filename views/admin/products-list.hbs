<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Products List</h2>
      <p>Find the perfect products for every skin type and daily routine.</p>
    </div>
    <div>
      <a href="#" class="btn btn-light rounded font-md">Export</a>
      <a href="#" class="btn btn-light rounded font-md">Import</a>
      <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Create new</a>
    </div>
  </div>
  <header class="card card-body mb-4">
    <div class="row gx-3">
      <div class="col-lg-4 col-md-6 me-auto">
        <input type="text" placeholder="Search..." class="form-control" />
      </div>
      <div class="col-lg-2 col-6 col-md-3">
        <select class="form-select">
          <option>All category</option>
          <option>Men</option>
          <option>Women</option>
          <option>Unisex</option>
        </select>
      </div>
      <div class="col-lg-2 col-6 col-md-3">
        <select class="form-select">
          <option>Latest added</option>
          <option>Cheap first</option>
          <option>Most viewed</option>
        </select>
      </div>
    </div>
  </header>
  <!-- card-header end// -->
  <div class="row">

    <!-- col.// -->
    {{#each products}}
      <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
        <div class="card shadow-sm border-0 h-100 product-card">

          <!-- Product Image -->
          <div class="position-relative">
            <img
              src="/userAssets/pictures/{{this.thumbnail}}"
              class="card-img-top"
              alt="{{this.productName}}"
              style="height: 200px; object-fit: cover;"
            />

            <!-- Category Badge -->
            <span class="badge bg-dark position-absolute top-0 start-0 m-2">
              {{this.category}}
            </span>
          </div>

          <!-- Card Body -->
          <div class="card-body d-flex flex-column">

            <!-- Product Name -->
            <h6 class="card-title fw-bold text-truncate">
              {{this.productName}}
            </h6>

            <!-- Brand -->
            <small class="text-muted mb-2">
              Brand:
              <strong>{{this.brand}}</strong>
            </small>

            <!-- Price Section -->
            <div class="mb-2">
              <span class="fw-bold text-success fs-5">
                ₹
                {{this.price}}
              </span>
              {{#if this.discountPrice}}
                <small class="text-muted text-decoration-line-through ms-2">
                  ₹
                  {{this.discountPrice}}
                </small>
              {{/if}}
            </div>

            <!-- Stock Status -->
            {{#if this.stock}}
              <span class="badge bg-success mb-3">
                In Stock ({{this.stock}})
              </span>
            {{else}}
              <span class="badge bg-danger mb-3">
                Out of Stock
              </span>
            {{/if}}

            <!-- Actions -->
            <div class="mt-auto d-flex justify-content-between">
              <a
                href="/admin/products/edit/{{this._id}}"
                class="btn btn-sm btn-outline-primary"
              >
                <i class="material-icons md-edit"></i>
                Edit
              </a>

              <a
                href="/admin/products/delete/{{this._id}}"
                class="btn btn-sm btn-outline-danger"
                onclick="return confirm('Are you sure you want to delete this product?')"
              >
                <i class="material-icons md-delete"></i>
                Delete
              </a>
            </div>
          </div>
        </div>
      </div>

    {{/each}}
    <!-- col.// -->

    <!-- col.// -->
  </div>
