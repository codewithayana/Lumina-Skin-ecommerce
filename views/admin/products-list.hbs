<section class="content-main">
  <div class="content-header">
    <div>
      <h2 class="content-title card-title">Products List</h2>
      <p>Find the perfect products for every skin type and daily routine.</p>
    </div>
    <div>
      <a href="/admin/add-product" class="btn btn-primary btn-sm rounded">Create
        new</a>
    </div>
  </div>
  <header class="card card-body mb-4">
    <div class="row gx-3">
      <div class="col-lg-4 col-md-6 me-auto">
        <input type="text" placeholder="Search..." class="form-control" />
      </div>
      <div class="col-lg-2 col-6 col-md-3">
        <select class="form-select">
          <option>All category</option>
          <option>Men</option>
          <option>Women</option>
          <option>Unisex</option>
        </select>
      </div>
      <div class="col-lg-2 col-6 col-md-3">
        <select class="form-select">
          <option>Latest added</option>
          <option>Cheap first</option>
          <option>Most viewed</option>
        </select>
      </div>
    </div>
  </header>
  <!-- card-header end// -->
  <div class="row">

    <!-- col.// -->
    {{#each products}}
      <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
        <div class="card border-0 shadow-sm h-100 product-card overflow-hidden">

          <!-- Image Wrapper -->
          <div class="position-relative">

            <!-- Main Thumbnail -->
            <img
              src="{{this.thumbnail}}"
              alt="{{this.productName}}"
              class="w-100"
              style="height:220px; object-fit:cover;"
            />

            <!-- Category Badge -->
            <span
              class="badge bg-dark position-absolute top-0 start-0 m-2 px-3 py-1 rounded-pill"
            >
              {{this.category}}
            </span>

            <!-- Mini Images (Overlay Bottom Right) -->
            {{#if this.images}}
              <div class="position-absolute bottom-0 end-0 m-2 d-flex gap-1">
                {{#each this.images}}
                  <img
                    src="{{this}}"
                    class="rounded border"
                    style="height:38px;width:38px;object-fit:cover;background:#fff;"
                  />
                {{/each}}
              </div>
            {{/if}}

          </div>

          <!-- Card Body -->
          <div class="card-body py-2 px-3">

            <!-- Product Name -->
            <h6 class="fw-semibold mb-1 text-truncate">
              {{this.productName}}
            </h6>

            <!-- Brand -->
            <small class="text-muted d-block mb-1">
              {{this.brand}}
            </small>

            <!-- Price Row -->
            <div class="d-flex align-items-center gap-2 mb-1">
              <span class="fw-bold text-success">
                ₹{{this.discountPrice}}
              </span>
              <small class="text-muted text-decoration-line-through">
                ₹{{this.price}}
              </small>
            </div>

            <!-- Stock -->
            {{#if this.stock}}
              <small class="text-success fw-semibold">
                ● In Stock ({{this.stock}})
              </small>
            {{else}}
              <small class="text-danger fw-semibold">
                ● Out of Stock
              </small>
            {{/if}}

          </div>

          <!-- Rating -->
                  <p style="margin: 0;">
                    ⭐
                    <span style="font-weight: 600;">{{this.rating}}</span>
                    / 5
                  </p>

          <!-- Actions -->
          <div class="px-3 pb-3 d-flex gap-2">
            <a
              href="/admin/products/edit/{{this._id}}"
              class="btn btn-sm btn-outline-primary w-50"
            >
              Edit
            </a>
            <a
              href="/admin/products/delete/{{this._id}}"
              class="btn btn-sm btn-outline-danger w-50"
              onclick="return confirm('Are you sure?')"
            >
              Delete
            </a>
          </div>

        </div>
      </div>

    {{/each}}
    <!-- col.// -->

    <!-- col.// -->
  </div>
